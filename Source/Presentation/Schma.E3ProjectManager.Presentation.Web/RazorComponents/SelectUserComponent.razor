@inherits BaseComponent
@using Schma.E3ProjectManager.Core.Application.ReadModels

<Select2 TItem="UserReadModel"
         Id="@Id"
         ParentId="@ParentId"
         @ref="SelectReference"
         Data="@AvailableUsers.ToList()"
         ValueChanged="@(item => UserSelected(item))"
         ValueExpression="@(() => SelectedUser)"
         Placeholder="@L[ResourceKeys.Labels_Choose]"
         TextExpression="@(item =>  $"{item.Username} - {item.Name}")"
         SearchingText="@L[ResourceKeys.Labels_Searching]"
         NoResultsText="@L[ResourceKeys.Labels_NoResults]">
</Select2>

